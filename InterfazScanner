			}
	switch(respuesta) {
	
	     
		case 1:
			
			return respuesta;
			
		
			
		case 2:
		     
			return respuesta;
			 
			
		case 3:
			 System.out.println("salistes");
			 abandona();
	 
	     break;
       default:
			
			System.out.println("No corresponde a ninguna opción");
		    respuesta = 0;
		
		}
	    	 
	
    if(respuesta > 3 || respuesta<= 0) {
